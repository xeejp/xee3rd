<html>
  <head>
    <meta charset="UTF-8">
    <title>実験管理画面</title>
  </head>
  <body>
    <h1>実験作成</h1><br>
    <form method="post" action="/host/experiments/create">
      <input type="hidden" name="_csrf_token" value="<%= @csrf_token %>">
      <h3>
        <div class="container-fluid">
          <div class="row form-group">
            <div class="form-group form-group-lg">
              <label class="col-sm-4 control-label" for="experiment">実験名</label>
              <div class="col-sm-6">
                <input type="text" class="form-control" id="experiment" name="experiment_name" value="<%= @experiment_name %>" placeholder="">
              </div>
            </div>
          </div>
          <div class="row form-group">
            <div class="form-group form-group-lg">
              <label class="col-sm-4 control-label" for="theme">実験テーマ</label>
              <div class="col-sm-6">
                <select class="form-control" id="theme" name="theme" value="<%= @theme_num %>">
                  <%= if @themes do %>
                    <%= for theme <- @themes do %>
                      <option><%= theme[:name] %></option>
                    <% end %>
                  <% end %>
                </select>
              </div>
            </div>
          </div>
        </div>
      </h3>
      <h3>
        ID : <%= @id %>
        <input type="hidden" name="id" value="<%= @id %>"></input>
      </h3>
      <div class="container-fluid">
        <div class="row">
          <button class="btn btn-primary pull-right" type="submit">実験作成</button>
        </div>
      </div>
    </form>
    <!--<button class="btn btn-primary" type="button" onClick="location.href='/host/'">戻る</button>-->

    <%= if @themes do %>
      <h2>実験テーマ一覧</h2>
      <h4>
        <table class="table table-striped">
          <thead>
          <tr>
            <th>#</th>
            <th>タイトル</th>
            <th>実験実績</th>
            <th>最終更新日</th>
            <th>実験製作者</th>
            <th>連絡先</th>
            <th>実験手引書</th>
          </tr>
          </thead>
          <tbody>
          <%= for theme <- @themes do %>
            <tr>
              <td></td>
              <td><%= theme[:name] %></td>
              <td><%= theme[:playnum] %>回終了</td>
              <td><%= theme[:lastupdate] %></td>
              <td><%= theme[:producer] %></td>
              <td><%= theme[:contact] %></td>
              <td><%= if theme[:manual] == "" do %>
                    なし
                  <%= else %>
                  <a href="<%= theme[:manual] %>">あり</a>
                  <%= end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </h4>
    <% end %>
  </body>
</html>
