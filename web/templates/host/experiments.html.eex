<html>
  <head>
    <meta charset="UTF-8">
    <title>Experiments Page</title>
  </head>
  <body>
    <h1>CreateExperiment</h1><br>
    <form method="post" action="/host/experiments/create">
      <input type="hidden" name="_csrf_token" value="<%= @csrf_token %>">
      <h3>
        <div class="container-fluid">
          <div class="row form-group">
            <div class="form-group form-group-lg">
              <label class="col-sm-4 control-label" for="experiment">ExperimentName</label>
              <div class="col-sm-6">
                <input type="text" class="form-control" id="experiment" name="experiment_name" value="<%= @experiment_name %>" placeholder="">
              </div>
            </div>
          </div>
          <div class="row form-group">
            <div class="form-group form-group-lg">
              <label class="col-sm-4 control-label" for="theme">ExperimentTheme</label>
              <div class="col-sm-6">
                <select class="form-control" id="theme" name="theme" value="<%= @theme_num %>">
                  <%= if @themes do %>
                    <%= for theme <- @themes do %>
                      <option><%= theme[:name] %></option>
                    <% end %>
                  <% end %>
                </select>
              </div>
            </div>
          </div>
        </div>
      </h3>
      <h3>
        ID : <%= @id %>
        <input type="hidden" name="id" value="<%= @id %>"></input>
      </h3>
      <div class="container-fluid">
        <div class="row">
          <button class="btn btn-primary pull-right" type="submit">Create Experiment</button>
        </div>
      </div>
    </form>
    <button class="btn btn-primary" type="button" onClick="location.href='/host/'">Back</button>
  </body>
</html>
